/**index.wxss**/
.swiper-container {
    width: 100%;
    height: 400rpx;
}

.swiper-container swiper {
    height: 400rpx;
}

.swiper-container .swiper-item {
    width: 100%;
    height: 400rpx;
}

.search-group {
    position: relative;
    width: 100%;
    height: 92rpx;
    margin: 10rpx 0;
    padding: 15rpx;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    background: #eee;
    box-sizing: border-box;
}

.search-group .search-input {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #888;
    border-radius: 30rpx;
    background: #fff;
    box-sizing: border-box;
}

.search-group .search-icon {
    position: absolute;
    top: 50%;
    right: 45rpx;
    width: 40rpx;
    height: 40rpx;
    margin-top: -20rpx;
}
