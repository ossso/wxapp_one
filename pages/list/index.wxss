/**list/index.wxss**/
.article-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.article-item .article-multi {
    width: 480rpx;
}

.article-item .article-title {
    height: 120rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    color: #222;
    overflow: hidden;
}

.article-item .article-info {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #888;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.article-item .article-info .author-name {
    margin-right: 10rpx;
}

.article-item .thumb {
    width: 200rpx;
    height: 160rpx;
}

.article-item .thumb image {
    display: block;
    width: 100%;
    height: 100%;
}

.tab-title {
    height: 36px;
    padding: 0 5px;
    background: #fff;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.tab-title-item {
    position: relative;
    height: 36px;
    padding: 0 2.5px;
    line-height: 36px;
    font-size: 15px;
    color: #121f2f;
}

.tab-title-item:last-child {
    margin-right: 0;
}

.tab-title-item.active {
    color: #3a6ea5;
}

.tab-title-item.active::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    border-bottom: 3px solid #3a6ea5;
}

.article-list-container {
    background: #fff;
}
