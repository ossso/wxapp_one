/**index.wxss**/
.article-media {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.article-media .thumb {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.article-media .thumb image {
    display: block;
    width: 100%;
    height: 100%;
}

.article-media .article-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 15rpx;
    font-size: 24rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.85);
    box-sizing: border-box;
    width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.comment-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.comment-item .avatar {
    position: relative;
    width: 128rpx;
    height: 96rpx;
    padding-right: 36rpx;
    box-sizing: border-box;
}

.comment-item .avatar image.pics {
    display: block;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}

.comment-item .avatar image.v {
    display: block;
    position: absolute;
    top: 60rpx;
    right: 24rpx;
    width: 36rpx;
    height: 36rpx;
}

.comment-item .comment-main {
    flex: 1;
}

.comment-item .comment-info {
    height: 40rpx;
    line-height: 40rpx;
    margin-bottom: 10rpx;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.comment-item .comment-info .author-name {
    font-size: 32rpx;
    color: #000;
    width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 256rpx;
}

.comment-item .comment-info .author-name.level-1 {
    color: #f7b514;
}

.comment-item .comment-info .post-date {
    font-size: 24rpx;
    color: #888;
}

.comment-item .comment-content {
    line-height: 1.4;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
}

.comment-item .comment-parent-content {
    padding: 15rpx;
    line-height: 1.2;
    font-size: 24rpx;
    color: #888;
    background: #f5f5f5;
    box-sizing: border-box;
}

.comment-item .comment-parent-content .parent-author-name {
    margin-right: 8rpx;
    color: #3a6ea5;
}

.article-page {
    padding: 0 30rpx;
    background: #fff;
}

.article-title {
    padding: 30rpx 0;
    font-size: 40rpx;
    color: #000;
}

.article-content {
    line-height: 1.8;
    font-size: 28rpx;
    color: #555;
}

.article-content .wxParse-pre {
    padding: 10rpx;
    background: #f5f5f5;
}

.article-info {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #888;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.article-info .author-name {
    margin-right: 20rpx;
}

.article-media-container {
    border-left: 1rpx solid #eee;
    background: #fff;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.article-media-container .article-media-item {
    width: 50%;
    height: 301rpx;
    padding: 20rpx;
    border-right: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
}

.comment-container {
    background: #fff;
}
