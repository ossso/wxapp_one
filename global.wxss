/**global.wxss**/
.global-loading-bar {
    height: 100rpx;
    padding: 20rpx 0;
    background: #fff;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: center;
    justify-content: center;
}

.global-loading-bar .icon {
    width: 30rpx;
    height: 30rpx;
    margin: 15rpx 0;
    margin-right: 10rpx;
    background: url("data:image/gif;base64,") 50% 50% no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
}

.global-loading-bar .tips {
    line-height: 60rpx;
    font-size: 24rpx;
    color: #888;
}

.global-loadend {
    height: 100rpx;
    padding: 20rpx 0;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
    color: #888;
    background: #fff;
    box-sizing: border-box;
}
